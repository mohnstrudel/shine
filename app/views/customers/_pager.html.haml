%nav
	%ul.pager
		=content_tag(:li, class: "previous #{page==0 ? 'disabled' : ''}") do
			=link_to_if page > 0, "&larr; Previous".html_safe, customers_path(keywords: keywords, page: page - 1)
		=content_tag(:li, class: "next") do
			=link_to "Next &rarr;".html_safe, customers_path(keywords: keywords, page: page + 1)